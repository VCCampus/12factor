  "缺乏变现产品设计",
  "过度商业化伤害关系"
]
flashcard.front = "千粉理论的核心观点是？"
flashcard.back = "不需要百万粉丝，1000个真粉丝（铁杆支持者）就能让创作者谋生，关键是深度而非广度。"
quiz.question = "千粉理论给创业者什么启示？"
quiz.correct_answer = "专注服务好核心用户比追求用户数量更重要"
quiz.wrong_answers = [
  "必须想办法获得至少1000个粉丝",
  "每个粉丝都要贡献100美元",
  "小众市场没有商业价值"
]

# Stage 4: 融资致胜法则
[[principles]]
id = "vc-basics"
order = 16
stage = "fundraising"
name = "风险投资本质"
concept = "用分散的小赌注押注于人，通过时间套利和幂律分布获得回报"
practices = [
  "理解VC的投资逻辑",
  "准备充分的尽调材料",
  "展示团队和增长潜力",
  "管理投资者预期"
]
antipatterns = [
  "过早或过晚融资",
  "估值预期不合理",
  "忽视投资条款细节",
  "选择不匹配的投资人"
]
flashcard.front = "风险投资的本质是什么？"
flashcard.back = "时间套利+幂律分布。将创业的长周期切分为多轮，每轮只判断能否进入下一轮，少数头部项目贡献绝大部分回报。"
quiz.question = "天使投资的成功率分布通常是？"
quiz.correct_answer = "1/3高回报，1/3一般回报，1/3归零"
quiz.wrong_answers = [
  "大部分项目都能成功",
  "90%失败，10%成功",
  "完全随机无规律"
]

[[principles]]
id = "funding-stages"
