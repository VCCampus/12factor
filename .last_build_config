# Stage 1: 创业核心认知
[[principles]]
id = "digital-entrepreneurship"
order = 1
stage = "core-cognition"
name = "数字创业定义"
concept = "运用数字化技术创业，打造3C数字产品，实现超级个体创业模式"
practices = [
  "明确区分广义（数字化转型）和狭义（3C产品）定义",
  "践行'和喜欢的人一起做有价值的事'的本质",
  "遵循玩→创→投的三步走路径",
  "从服务→产品→资产逐步发展"
]
antipatterns = [
  "盲目追求技术而忽视价值创造",
  "独自创业而缺乏团队支持",
  "跳过探索阶段直接大规模投入",
  "忽视数字资产的长期价值"
]
flashcard.front = "数字创业的本质是什么？"
flashcard.back = "和喜欢的人一起做有价值的事。广义是运用数字化技术创业（数字化转型），狭义是打造3C数字产品的创业（超级个体）。"
quiz.question = "数字创业的'三步走'路径是？"
quiz.correct_answer = "玩（探索尝试）→创（创造实践）→投（投资规模化）"
quiz.wrong_answers = [
  "学习→工作→创业",
  "构思→融资→上市",
  "产品→市场→扩张"
]

